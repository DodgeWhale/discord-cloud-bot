{
	"compileOnSave": true,
	"compilerOptions": {
        "allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"lib": [
        	"es5",
			"es6",
			"dom"
        ],
		"module": "es6",
		"moduleResolution": "node",
		"target": "es6",
		"allowJs": false,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"baseUrl": "./src",
		"paths": {
			"server/*": ["server/*"],
			"client/*": ["client/*"],
			"app": ["server/app.ts"],
			"bot": ["server/bot.ts"]
		},
	}
}